def myConv(a, b):
  
  L = len(a)
  a = a[::-1] #inverzni signal?

  c = np.zeros(len(b)+L-1)

  #Prosirivanje signala da bi se omogucilo mnozenje
  b_ext = np.concatenate((np.zeros(L-1), b, np.zeros(L-1)))

  for i in range(len(b_ext)-L+1):
    tmp = b_ext[i:i+L]*a
    c[i] = sum(tmp)

  return c
